<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<ScrollView
			android:id="@+id/set_availability_root_scroll_view"
			android:layout_weight="1"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
			<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<schedulee.droid.views.availability.AvailabilitiesView
					android:id="@+id/set_availability_availabilities_view"
					android:layout_margin="10dp"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"/>
				<schedulee.droid.views.availability.DaysOfWeekView
					android:id="@+id/set_availability_days_of_week_view"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"/>
			</LinearLayout>
		</ScrollView>
		<Button
			android:id="@+id/set_availability_add_time_available_button"
			android:text="Add Time Available"
			android:textColor="@color/white"
			android:background="@color/selected_button_color"
			android:layout_width="match_parent"
			android:layout_height="55dp" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/set_availability_overlay"
		android:background="@color/transparent_overlay_color"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:alpha="0.5"
		android:visibility="invisible"/>
	<LinearLayout
		android:id="@+id/set_availability_add_availability_view"
		android:background="@color/button"
		android:layout_alignParentBottom="true"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="200dp"
		android:visibility="invisible"/>
</RelativeLayout>
