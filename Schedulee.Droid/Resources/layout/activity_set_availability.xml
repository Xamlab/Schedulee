<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
	    <TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="15dp"
		    android:text="TIME AVAILABLE"
		    android:textColor="@color/title"
		    android:textSize="15sp"/>
        <ScrollView
            android:id="@+id/set_availability_root_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <schedulee.droid.views.availability.AvailabilitiesView
                android:id="@+id/set_availability_availabilities_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp" />

        </ScrollView>

        <Button
            android:id="@+id/set_availability_add_time_available_button"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/selected_button_color"
            android:text="Add Time Available"
            android:textColor="@color/white" />
    </LinearLayout>

    <View
        android:id="@+id/set_availability_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:clickable="false"
        android:background="@color/transparent_overlay_color"
        android:orientation="vertical"
        android:visibility="invisible" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/set_availability_add_availability_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
	    android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="invisible">

        <TextView
            android:id="@+id/new_time_available_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="NEW TIME AVAILABLE"
            android:textColor="@color/title"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/set_availability_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:text="CANCEL"
            android:textColor="@drawable/cancel_button_text_color"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <schedulee.droid.views.availability.DaysOfWeekView
            android:id="@+id/set_availability_days_of_week_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/new_time_available_title" />

        <ScrollView
            android:id="@+id/availabilities_scroll_view"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:clipChildren="true"
            app:layout_constraintBottom_toTopOf="@+id/set_availability_add_time_period_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/set_availability_days_of_week_view">

            <schedulee.droid.views.availability.TimePeriodsView
                android:id="@+id/set_availability_time_periods_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

        </ScrollView>

        <View
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/separator"
            app:layout_constraintBottom_toTopOf="@+id/set_availability_add_time_period_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/set_availability_add_time_period_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/deselected_button_color"
            android:clickable="true"
            android:gravity="center_horizontal|center_vertical"
            android:text="+ Add Time Period"
            android:textColor="@drawable/time_period_button_text_color"
            android:textSize="17sp"
            app:layout_constraintBottom_toTopOf="@+id/set_availability_save_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/set_availability_save_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/save_button_background"
            android:text="Save"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/set_availability_loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:clickable="false"
        android:background="@color/transparent_overlay_color"
        android:orientation="vertical"
        android:visibility="invisible" />

    <ProgressBar
        android:id="@+id/set_availability_loading_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible" />
</RelativeLayout>
