<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
	<Button
		android:id="@+id/settings_save_button"
		android:text="SAVE"
		android:textColor="@color/white"
		android:background="@color/button"
		android:layout_width="match_parent"
		android:layout_height="55dp"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:layout_marginBottom="40dp"
		android:layout_marginTop="30dp"
		android:layout_alignParentBottom="true"/>
	<ScrollView
		android:layout_above="@id/settings_save_button"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<LinearLayout
			android:focusable="true"
			android:focusableInTouchMode="true"
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<schedulee.droid.controls.EntryView
				android:id="@+id/settings_username_entry"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:layout_marginBottom="10dp"
				android:layout_marginTop="10dp"/>
			<schedulee.droid.controls.EntryView
				android:id="@+id/settings_first_name_entry"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:layout_marginBottom="10dp"
				android:layout_marginTop="0dp"/>
			<schedulee.droid.controls.EntryView
				android:id="@+id/settings_last_name_entry"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:layout_marginBottom="10dp"
				android:layout_marginTop="10dp"/>
			<schedulee.droid.controls.EntryView
				android:id="@+id/settings_location_entry"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:layout_marginBottom="10dp"
				android:layout_marginTop="10dp"/>
			<LinearLayout
				android:orientation="horizontal"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:layout_marginBottom="10dp"
				android:layout_marginTop="10dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<schedulee.droid.controls.EntryView
					android:id="@+id/settings_travel_time_entry"
					android:layout_weight="1"
					android:layout_width="0dp"
					android:layout_height="wrap_content"/>
				<TextView
					android:text="min"
					android:layout_gravity="center_vertical"
					android:layout_marginLeft="10dp"
					android:layout_weight="1"
					android:layout_width="0dp"
					android:layout_height="wrap_content"/>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</RelativeLayout>
