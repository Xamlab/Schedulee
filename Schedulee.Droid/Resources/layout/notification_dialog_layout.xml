<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reservation_date_layout_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F8F8F8"
    android:orientation="vertical"
    android:weightSum="2">

    <TextView
        android:id="@+id/notification_dialog_title_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:text="Title"
        android:textColor="@color/title"
        android:textSize="19dp" />

    <TextView
        android:id="@+id/notification_dialog_message_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:text="ARE YOU SURE YOU WANT LOG OUT?"
        android:textColor="#88888A"
        android:textSize="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#E2E2E3" />


    <Button
        android:id="@+id/notification_dialog_ok_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_weight="1"
        android:background="@drawable/user_dialog_button_background"
        android:text="yes"
        android:textColor="@color/white" />


</LinearLayout>
